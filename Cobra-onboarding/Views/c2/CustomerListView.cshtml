@{
    ViewBag.Title = "CustomerListView";
}
<div class="container" ng-app="onboardapp" ng-controller="CustomerCtrl">
    
    <h2>CustomerList</h2>



    <p>{{model | json}}</p>
    <p>The hexadecimal of 255 is {{hex}}</p>
    <p>@Html.ActionLink("Create New", "Add")</p>
    <table class="table">
        <tr>
            <th>
                Name
            </th>
            <th>
                Address1
            </th>
            <th>
                Address2
            </th>
            <th>
                City
            </th>
            <th></th>
        </tr>


        <tr ng-repeat="item in model">
            <td>
                {{item.Name}}
            </td>
            <td>
                {{item.Address1}}
            </td>
            <td>
                {{item.Address2}}
            </td>
            <td>
                {{item.City}}
            </td>
            <td><a ng-click="editCus()" href="/c2/Edit/{{item.Id}}">Edit</a>
            @*<span ng-click="editCus(item)" class="editclick btn btn-primary">Edit</span></td>*@

            @*<td><a @Html.ActionLink("Edit2", "Edit")>{{item.Id}}</a></td>*@

        <td><button class="btn btn-primary" ng-click="deleteCus(item.Id)">Delete</button></td>
               
       
        </tr>


    </table>
</div>

