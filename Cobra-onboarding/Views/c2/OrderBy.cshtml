@{
    ViewBag.Title = "OrderBy";
}

<h2>OrderBy</h2>

<div class="container" ng-app="onboardapp" ng-controller="OrderCtrl">

    <h2>OrderList</h2>

    <div>10+20={{10+20}}</div>
    
    <p>{{model2 | json}}</p>
    <button type="button" class="btn btn-primary" ng-click="addOrder()" data-toggle="modal" data-target="#myAddModal">Add</button>
    @*<p>@Html.ActionLink("Create New", "Add")</p>*@


    <table class="table">
        <tr>
            <th>
                OrderId
            </th>
            <th>
                OrderDate
            </th>
            <th>
                Name
            </th>            
            <th>
                Product Name
            </th>
            <th>
                Price
            </th>
            <th>
            </th>

        </tr>


        <tr ng-repeat="item in model2">
            <td>
                {{item.OrderId}}
            </td>            
            <td>
                {{item.OrderDate}}
            </td>
            <td>
                {{item.Name}}
            </td>
           
            <td>
                {{item.ProductName}}
            </td>
            <td>
                {{item.Price}}
            </td>
            <td>
                <!-- Trigger the modal with a button -->
                <button type="button" ng-click="OrderList(item)" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Edit{{item.Id}}</button>
            <td><button type="button" ng-click=" OrderDelete(item)" class="btn btn-primary">Delete</button></td>
        </tr>
    </table>


    <div class="container">
        <br />
        <!-- Modal -->
        <div class="modal fade" id="myAddModal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">

                    <div class=“modal-header”>
                        <h4 class=“modal-title”>Add</h4>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-group">
                                <label>Date</label>
                                <input type="text" ng-model="order.OrderDate" class="form-control input-lg" placeholder="OrderDate">
                            </div>
                           <div class="form-group">
                                <label>Name</label>
                               <select ng-model="order.Name" ng-options="x for x in model2"></select>
                            </div>
                            
                            <div class="form-group">
                                <label>ProductName</label>
                                <select ng-model="order.ProductName" ng-options="x for x in model3"></select>
                            </div>
                            <div class="form-group">
                                <label>Price</label>
                                <input type="text" ng-model="order.Price" class="form-control input-lg" placeholder="Price">

                            </div>

                            <p>{{order}}</p>
                        </form>

                    </div>
                    <div class="modal-footer">
                        <button type="submit" ng-click="addOrd(order)">Save</button>
                        
                        <button class="btn btn-primary pull-left" data-dismiss="modal">Cancel</button>
                    </div>
                    <div>10+20={{10+20}}</div>

                </div>

            </div>
        </div>
    </div>

    <div class="container">
        <br />
        <!-- Modal -->
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">

                    <div class=“modal-header”>
                        <h4 class=“modal-title”>Edit</h4>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-group">
                                <label>Address2</label>
                                <input type="text" ng-model="order.OrderDate" class="form-control input-lg" placeholder="OrderDate">
                            </div>
                            <div class="form-group">
                                <label>Name</label>
                                <select ng-model="order.Name" ng-options="x for x in model2"></select>
                            </div>

                            <div class="form-group">
                                <label>ProductName</label>
                                <select ng-model="order.ProductName" ng-options="x for x in model3"></select>
                            </div>
                            <div class="form-group">
                                <label>City</label>
                                <input type="text" ng-model="order.Price" class="form-control input-lg" placeholder="Price">

                            </div>

                            <p>{{order}}</p>
                        </form>

                    </div>
                    <div class="modal-footer">
                        <button type="submit" ng-click="EditOrder(order)">Save</button>
                        <button class="btn btn-primary pull-left" data-dismiss="modal">Cancel</button>
                    </div>
                    <div>10+20={{10+20}}</div>

                </div>

            </div>
        </div>
    </div>
</div>