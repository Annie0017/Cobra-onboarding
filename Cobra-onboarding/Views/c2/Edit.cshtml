<h1 class="text-center text-danger">Add Customer</h1>
<br />
<div class="container" ng-app="onboardapp" ng-controller="CustomerCtrl">
       <div class="row">
        <div class="col-md-6 col col-md-offset-3">
            <form>
                <div class="form-group">
                    <label for="inputemail">Name</label>
                    <input type="text" ng-model="new.cus.name" class="form-control input-lg" placeholder="Customer Name">
                </div>
                <div class="form-group">
                    <label for="inputPassword">Address1</label>
                    <input type="text" ng-model="new.cus.add1" class="form-control input-lg" placeholder="Customer Addr1">
                </div>
                <div class="form-group">
                    <label for="inputPassword">Address2</label>
                    <input type="text" ng-model="new.cus.add2" class="form-control input-lg" placeholder="Customer Addr2">
                </div>
                <div class="form-group">
                    <label for="inputPassword">City</label>
                    <input type="text" ng-model="new.cus.city" class="form-control input-lg" placeholder="Customer City">
                </div>
                @*<button type="submit" value="Create" class="btn btn-primary" ng-click="addCus()">Add</button>*@
                <button ng-click="editCu()" class="btn btn-info form-control input-lg" >Save</button>
                   
</form>
        </div>
    </div>
</div>
